---
import BaseHead from "@/components/BaseHead.astro"
import Header from "@/components/header/Header.astro"
import Footer from "@/components/Footer.astro"

interface Props {
  pageTitle?: string,
  pageDescription?: string,
  image?: string,
  pageType?: 'default' | 'episode',
  epNumber?: number
}

const { pageType = 'default', epNumber } = Astro.props
---

<html lang="en">
  <head>
    <BaseHead {...Astro.props} />
    <slot name="head-append" />
  </head>

  <body class={`l-page ${'is-' + pageType}`}
    data-episode={epNumber || undefined}>
    <Header variant={pageType} />

    <main class="l-main">
      <slot />
    </main>

    <Footer />
  </body>
</html>
