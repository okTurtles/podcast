<style lang="scss">
@use "../styles/variables" as *;

.c-header-wrapper {
  display: flex;
  flex-direction: row;
  column-gap: 2.5rem;
}

.c-podcast-cover {
  position: relative;
  border-radius: $radius-large;
  width: 8.75rem;
  height: 8.75rem;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background-color: $dark_navy;
  flex-shrink: 0;

  img {
    display: inline-block;
    width: 6.25rem;
    height: auto;
    user-select: none;
  }

  @include from ($tablet) {
    width: 17.25rem;
    height: 17.25rem;
    
    img {
      width: 11.75rem;
    }
  }
}

.c-podcast-main-intro {
  position: relative;
  display: block;
  flex-grow: 1;
  color: $text_white;

  .c-intro {
    font-size: 1.25rem;
  }
}
</style>
