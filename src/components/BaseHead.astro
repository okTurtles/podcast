---
import '@/styles/main.scss'
import { SITE_TITLE_COMMON, SITE_DESCRIPTION_COMMON, SITE_URL } from '@/constants'

interface Props {
  pageTitle?: string,
  pageDescription?: string,
  image?: string,
  pageType?: 'default' | 'episode',
  epNumber?: number
}

const {
  pageTitle = '',
  pageType = 'default',
  pageDescription = '',
  image = '/images/show-cover.jpg',
  epNumber
} = Astro.props
const title = pageTitle || SITE_TITLE_COMMON
const description = pageDescription || SITE_DESCRIPTION_COMMON
const imageFullPath = new URL(image, SITE_URL)
const rssFeedPath = new URL('rss.xml', SITE_URL)
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />
<link rel="alternate" type="application/rss+xml" title={`${SITE_TITLE_COMMON} RSS Feed`} href={rssFeedPath} />

<!-- Primary Meta tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageFullPath} />

<!-- X(Twitter) -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageFullPath} />
