---
import PageLayout from "@/layouts/PageLayout.astro"
import EpisodeList from "@/components/episode-list/EpisodeList.vue"
---

<PageLayout>
	<div class="c-home-content-container">
		<div class="c-home-about mt-4">
			<h2 class="c-home-title mb-1">About the show</h2>
			<p>
				okTurtles Podcast explores all the latest decentralization technologies, with a focus on security and privacy.
			</p>
		</div>

		<hr class="c-section-divider" />
		
		<h2 class="c-home-title mt-4 mb-1">Episodes</h2>

		<EpisodeList client:load />
	</div>
</PageLayout>

<style lang="scss">
@use '@/styles/variables' as *;

.c-home-content-container {
  position: relative;
  display: block;
  max-width: 52rem;
  margin: 0 auto;
	padding-bottom: 7rem;

	@include from($tablet) {
		padding-bottom: 10rem;
	}
}

.c-home-title {
  font-size: $font-lg;
  font-weight: 600;

	@include from($tablet) {
		font-size: $font-heading-5;
	}
}

.c-section-divider {
	position: relative;
  display: block;
  width: 7rem;
	margin-top: 4rem;

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: $grey_3;
  }
}
</style>
